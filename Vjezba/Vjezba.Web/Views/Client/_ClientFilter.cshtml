@model Vjezba.Web.Models.ClientFilterModel

<form action="@Url.Action("AdvancedSearch")" method="post" class="form-inline">
    <div class="row">
        <div class="col">
            <div class="form-group">
                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", placeholder = "Pretraga po imenu" } })
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <input type="text" name="@Html.NameFor(model => model.Address)"/>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Pretraga po e-mailu" />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                @Html.TextBoxFor(model => model.City, new { @class = "form-control", placeholder = "Pretraga po gradu" })
            </div>
        </div>
        <div class="col">
            <button type="submit" class="btn btn-primary m-t-10">Submit</button>
        </div>
    </div>
</form>


